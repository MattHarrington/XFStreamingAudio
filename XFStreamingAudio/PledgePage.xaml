<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="XFStreamingAudio.PledgePage"
	Icon="PledgeIcon.png"
	Title="Support">
	<ContentPage.Padding>
		<OnPlatform
			x:TypeArguments="Thickness"
			iOS="0,20,0,0"
			Android="0"
			WinPhone="0" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout Padding="0,100,0,0" Spacing="20">
			<Button
				x:Name="donateBtn"
				Text="Donate"
				FontSize="18" />
			<Button
				x:Name="buildingCampaignBtn"
				Text="Building Campaign"
				FontSize="18" />
			<Button
				x:Name="volunteerBtn"
				Text="Volunteer"
				FontSize="18" />
			<Button
				x:Name="membershipBtn"
				Text="Membership"
				FontSize="18" />
			<Button
				x:Name="vehicleDonationBtn"
				Text="Vehicle Donation"
				FontSize="18" />
			<Button
				x:Name="plannedGiftsBtn"
				Text="Planned Gifts"
				FontSize="18" />
			<Button
				x:Name="underwriterBtn"
				Text="Become an Underwriter"
				FontSize="18" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>