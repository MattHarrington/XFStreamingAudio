<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="XFStreamingAudio.PledgePage"
	Icon="PledgeIcon.png"
	Title="Pledge">
	<ContentPage.Padding>
		<OnPlatform
			x:TypeArguments="Thickness"
			iOS="0,20,0,0"
			Android="0"
			WinPhone="0" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<ScrollView>
			<StackLayout
				Padding="0,30,0,0">
				<Label
					FontSize="24"
					FontAttributes="Bold"
					XAlign="Center">
					<Label.Text>
Thank you for
supporting KALX
				</Label.Text>
				</Label>
				<Button
					x:Name="donateBtn"
					Text="Give Money"
					FontSize="18" />
								<Button
					x:Name="plannedGiftsBtn"
					Text="Give Stuff"
					FontSize="18" />
				<Button
					x:Name="volunteerBtn"
					Text="Volunteer"
					FontSize="18" />
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>