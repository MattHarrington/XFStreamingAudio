<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="XFStreamingAudio.SettingsPage"
	Icon="SettingsIcon.png"
	Title="Settings">
	<ContentPage.Padding>
		<OnPlatform
			x:TypeArguments="Thickness"
			iOS="0,20,0,0"
			Android="0"
			WinPhone="0" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<TableView
			Intent="Settings">
			<TableRoot>
				<TableSection
					Title="Audio">
					<SwitchCell
						x:Name="bandwidthSwitch"
						Text="High quality" />
				</TableSection>
				<TableSection
					Title="About">
					<ViewCell
						IsEnabled="false">
						<StackLayout
							Orientation="Horizontal"
							Padding="20,0,20,0">
							<Label
								Text="Version"
								VerticalOptions="CenterAndExpand" />
							<Label
								Text="1.0.1 beta 3"
								HorizontalOptions="EndAndExpand"
								VerticalOptions="CenterAndExpand" />
						</StackLayout>
					</ViewCell>
				</TableSection>
			</TableRoot>
		</TableView>
	</ContentPage.Content>
</ContentPage>