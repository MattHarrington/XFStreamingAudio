<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="XFStreamingAudio.ListenPage"
	Icon="ListenIcon.png"
	Title="Listen">
	<ContentPage.Padding>
		<OnPlatform
			x:TypeArguments="Thickness"
			iOS="0,20,0,0"
			Android="0"
			WinPhone="0" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout
			Orientation="Horizontal"
			Padding="20,0,0,0">
			<Image
				Source="WhiteTower"
				Aspect="AspectFill" />
			<StackLayout
				Orientation="Vertical">
				<StackLayout.Padding>
					<OnPlatform
						x:TypeArguments="Thickness"
						iOS="0"
						Android="0,20,0,0"
						WinPhone="0" />
				</StackLayout.Padding>
				<Image
					Source="SettingsIcon"
					x:Name="launchSettingsImage"
					HorizontalOptions="End" />
				<Image
					Source="ListenPageLogo"
					HorizontalOptions="Center"
					VerticalOptions="EndAndExpand" />
				<Frame
					Padding="0,20,0,30"
					HasShadow="false">
					<Button
						x:Name="playStopBtn"
						Text="▶︎"
						TextColor="#007AFF"
						FontSize="48"
						BackgroundColor="Transparent" />
				</Frame>
				<Frame
					Padding="0,0,0,40"
					HasShadow="false">
					<ActivityIndicator
						IsRunning="false"
						x:Name="bufferingIndicator"
						HorizontalOptions="Center" />
				</Frame>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>