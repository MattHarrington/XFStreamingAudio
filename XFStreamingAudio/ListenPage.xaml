<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="XFStreamingAudio.ListenPage"
	Icon="ListenIcon.png"
	Title="Listen">
	<ContentPage.Padding>
		<OnPlatform
			x:TypeArguments="Thickness"
			iOS="0,20,0,0"
			Android="0"
			WinPhone="0" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout
			Orientation="Horizontal"
			Padding="20,0,0,0">
			<Image
				Source="WhiteTower"
				Aspect="AspectFill" />
			<StackLayout
				Orientation="Vertical">
				<Image
					Source="SettingsIcon"
					x:Name="launchSettingsImage"
					HorizontalOptions="End" />
				<Label
					Text="KVMR"
					FontSize="60"
					FontFamily="Futura-Medium"
					TextColor="#7AC143"
					VerticalOptions="EndAndExpand"
					HorizontalOptions="Center" />
				<Label
					Text="Nevada City"
					TextColor="Purple"
					FontSize="24"
					FontFamily="Futura-Medium"
					HorizontalOptions="Center" />
				<Frame
					Padding="0,100,0,100"
					HasShadow="false">
					<Button
						x:Name="playStopBtn"
						Text="▶︎"
						TextColor="#007AFF"
						FontSize="48"
						BackgroundColor="Transparent" />
				</Frame>
				<Button
					x:Name="diagnosticsBtn"
					BackgroundColor="Transparent"
					Text="Diagnostics"
					HorizontalOptions="EndAndExpand"
					VerticalOptions="Center"
					IsVisible="false" />
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>